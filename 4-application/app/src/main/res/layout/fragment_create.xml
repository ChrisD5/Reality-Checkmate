<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkestGrey"
    tools:context=".CreateFragment">
    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="144dp"
        android:layout_above="@+id/editTextTextPersonName"
        android:layout_alignStart="@+id/editTextTextPersonName"
        android:layout_alignEnd="@+id/editTextTextPersonName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="-35dp"
        android:layout_marginBottom="-40dp"
        android:fontFamily="monospace"
        android:text="Please Enter Your Custom Notification:"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/clear_notifications_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/editTextTextPersonName"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="-310dp"
        android:background="#CFCACA"
        android:backgroundTint="#373636"
        android:fontFamily="monospace"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Clear Custom Notifications"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/editTextTextPersonName"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="-192dp"
        android:background="#CFCACA"
        android:backgroundTint="#373636"
        android:fontFamily="monospace"
        android:text="Submit"
        android:textColor="#FFFFFF" />
</RelativeLayout>